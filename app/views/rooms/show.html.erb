<div class="container room-show">
  <div class="row">
    <div class="col-md-8">
      <%= image_tag @room.image.to_s ,class: "room-show-image" %>
      <div class="room-show-detile">
        <div class="room-show-detile-icon">
          <%= image_tag @room.user.image_name.to_s ,class: "host-icon" %>
        </div>
        <div class="room-show-profile">
          <p class="room-show-profile-name"><%= @room.room_name %></p>
          <p class="room-show-profile-address"><%= @room.address %></p>
        </div>
      </div>
      <p class="room-show-detile-content"><%= @room.description %></p>
    </div>
    <div class="col-md-4">
      <div class="room-show-nav">
        <h5 class="price-icon"><%= @room.price %> / 日</h5>
        <div class="room-show-date-select">
          <%= form_with url: new_reservation_path, method: :get, local: true do |f| %>
            <%= f.label :start_date ,"開始日" %>
            <%= f.date_field :start_date, class: "form-control mb-4", autocomplete: "開始日" %>
            <%= f.label :end_date ,"終了日" %>
            <%= f.date_field :end_date, class: "form-control mb-4", autocomplete: "終了日" %>
            <%= f.label :person_num ,"人数" %>
            <%= f.number_field :person_num, class: "form-control mb-4", autocomplete: "人数" %>
            <%= f.hidden_field :room_id, value: @room.id %>
            <%= f.submit "予約確認画面へ", class: "btn btn-primary form-control" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>