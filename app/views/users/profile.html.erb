<div class="clearfix"></div>
<div class="notifications">
  <div class="notice">
    <% if flash.notice %>
      <p class="notice"><%= flash.notice %></p>
    <% end %>
  </div>
</div>
<div class="container-fiuld user">
  <div class="row-1">
    <div class="col-lg-2 user-nav user-nav-pc d-lg-block d-none">
      <ul>
        <li class=""><a href="/users/account">アカウント</a></li>
        <li class="active"><a href="/users/profile">プロフィール</a></li>
      </ul>
    </div>
    <div class="col-lg-2 user-nav user-nav-mobile d-lg-none">
      <ul>
        <li class=""><a href="/users/account">アカウント</a></li>
        <li class="active"><a href="/users/profile">プロフィール</a></li>
      </ul>
    </div>
    <div class="col-lg-10 user-view">
      <div class="user-view-box">
        <div class="update-content">
          <div class="row-1">
            <h5>プロフィール</h5>
          </div>
        </div>
        <%= form_with(model: @user, local: true, class: "edit_user") do |f| %>
          <div class="update-content">
            <div class="row-1">
              <div class="col-md-6 offset-md-3">
                <div class="icon-box">
                  <%= image_tag @user.image_name.to_s ,class: "icon-image host-icon" %>
                </div>
              </div>
            </div>
          </div>
          <div class="update-content">
            <div class="row-1">
              <%= f.label :image_name ,"アイコン画像", class: "col-md-3 required-a" %>
              <%= f.file_field :image_name ,class: "mb-4 col-md-9" %>
            </div>
          </div>
          <div class="update-content">
            <div class="row-1">
              <%= f.label :name ,"名前", class: "col-md-3 required-a" %>
              <%= f.text_field :name, class: "form-control mb-4 col-md-9", autocomplete: "名前" %>
            </div>
          </div>
          <div class="update-content">
            <div class="row-1">
              <%= f.label :introduction ,"自己紹介", class: "col-md-3 required-a" %>
              <%= f.text_area :introduction, class: "form-control mb-4 col-md-9", autocomplete: "自己紹介" %>
            </div>
          </div>
          <div class="update-content">
            <div class="row-1">
              <%= f.submit "更新", class: "col-md-2 btn btn-primary mx-3" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>