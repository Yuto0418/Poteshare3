<div class="clearfix"></div>
<div class="notifications"></div>
<div class="container-fiuld room-new">
  <div class="row-1">
    <div class="col-lg-2 room-nav room-nav-pc d-lg-block d-none">
      <ul>
        <li class="active"><a href="/rooms/new">基本情報</a></li>
      </ul>
    </div>
    <div class="col-lg-2 room-nav room-nav-mobile d-lg-none">
      <ul>
        <li class="active"><a href="/rooms/new">基本情報</a></li>
      </ul>
    </div>
    <div class="col-lg-10 room-view">
      <div class="room-view-box">
        <%= form_for @room do |f| %>
        <div class="update-content">
          <div class="row-1">
            <h5>ルーム情報登録</h5>
          </div>
        </div>
        <div class="update-content">
          <div class="row-1">
            <%= f.label :room_name ,"ルーム名", class: "col-md-3 required-a" %>
            <%= f.text_field :room_name, class: "form-control mb-4 col-md-9", autofocus: true, autocomplete: "ルーム名", placeholder: "ルーム名を入力" %>
          </div>
        </div>
        <div class="update-content">
          <div class="row-1">
            <%= f.label :description ,"ルーム紹介", class: "col-md-3 required-a" %>
            <%= f.text_area :description, class: "form-control mb-4 col-md-9", autofocus: true, autocomplete: "ルーム紹介", placeholder: "ルーム説明を入力" %>
          </div>
        </div>
        <div class="update-content">
          <div class="row-1">
            <%= f.label :price ,"料金", class: "col-md-3 required-a" %>
            <%= f.number_field :price, class: "form-control mb-4 col-md-9", autofocus: true, autocomplete: "料金", placeholder: "一日あたりの料金を入力" %>
          </div>
        </div>
        <div class="update-content">
          <div class="row-1">
            <%= f.label :address ,"住所", class: "col-md-3 required-a" %>
            <%= f.text_field :address, class: "form-control mb-4 col-md-9", autofocus: true, autocomplete: "住所", placeholder: "住所を入力" %>
          </div>
        </div>
        <div class="update-content">
          <div class="row-1">
            <%= f.label :image ,"ルーム画像", class: "col-md-3 required-a" %>
            <%= f.file_field :image ,class: "mb-4 col-md-9" %>
          </div>
        </div>
        <%= f.hidden_field :user_id, value: current_user.id %>
        
        <div class="update-content">
          <div class="row-1">
            <%= f.submit "登録", class: "col-md-2 btn btn-primary mx-3" %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>