<div class="clearfix"></div>
<div class="notifications">
  <% if flash.notice %>
    <p class="notice"><%= flash.notice %></p>
  <% end %>
</div>
<div class="container-fiuld reservations">
  <h4 class="pb-4">予約済みルーム一覧</h4>
  <table>
    <thead>
      <tr align="center">
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>ルーム紹介</th>
        <th>合計料金</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>予約確定日時</th>
        <th>予約キャンセル</th>
      </tr>
    </thead>
    <tbody>
      <% @reservations.each do |reservation| %>
      <% @rooms.each do |room| %>
      <tr>
        <td><%= image_tag room.image.to_s,class: "reservations-image" %></td>
        <td class="posts-name"><%= link_to "#{room.room_name}", room %></td>
        <td class="posts-content"><%= room.description %></td>
        <td class="price-icon"></td>
        <td><%= reservation.start_date %></td>
        <td><%= reservation.end_date %></td>
        <td><%= reservation.created_at %></td>
        <td><%= link_to "キャンセル", reservation_path(reservation.id), method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
      </tr>
      <% end %>
      <% end %>
    </tbody>
  </table>
</div>